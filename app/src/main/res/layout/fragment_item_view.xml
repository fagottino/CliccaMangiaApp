<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtFirstPlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toEat"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/txtFirstPlateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingTop="5sp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imgFirstPlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/txtSecondPlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toDrink"
        android:paddingTop="5sp"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/txtSecondPlateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingTop="5sp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imgSecondPlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/txtAtThePriceOf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/atThePriceOf"
        android:paddingTop="10sp"
        android:textSize="28sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNewPrice"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="0"
            android:paddingTop="10sp"
            android:textSize="28sp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>